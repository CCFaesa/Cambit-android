<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f3f3f4"
        android:orientation="vertical"
        tools:context=".view.screen.main.MainActivity">
    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editScreenBox"
            android:layout_width="match_parent"
            android:background="@drawable/screenbox"
            android:layout_height="wrap_content"
            android:paddingLeft="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="8dp"/>

    <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editScreenBox">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:layout_marginTop="15dp"
                          android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/orderButtonImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/orderimgbutton"
                        android:layout_marginLeft="7.5dp"
                        android:layout_marginTop="4dp"/>

                <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/filterButtonImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/filterimgbutton"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="4dp"/>

            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mainRecItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="55dp"
                    android:layout_marginRight="7.5dp"
                    android:layout_marginLeft="7.5dp"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.FitWindowsLinearLayout
            android:id="@+id/auxBar"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:gravity="center_horizontal"
            android:background="#5195fb"
            android:weightSum="4"
            android:layout_alignParentStart="true">

        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/rodapeHome_Id"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:background="@drawable/home"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="33dp"
                android:layout_weight="1"/>

        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/rodapeWallet_Id"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:background="@drawable/wallet"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="60dp"
                android:layout_weight="1"/>

        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/rodapeChest_Id"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:background="@drawable/chest"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="60dp"
                android:layout_weight="1"
        />

        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/rodapeUser_Id"
                android:background="@drawable/user"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="33dp"
                android:layout_weight="1"/>
    </androidx.appcompat.widget.FitWindowsLinearLayout>

</RelativeLayout>