<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="10dp">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ciImgItem"
                style="@style/Image"
                android:layout_width="93dp"
                android:layout_height="93dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="H,1:1"
                tools:srcCompat="@mipmap/ic_launcher"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"/>
        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ciEvaluation"
                style="@style/Image"
                android:text="5.0"
                android:paddingBottom="5dp"
                android:background="@drawable/backnotegreen"
                android:textColor="#FFFFFF"
                android:layout_width="51dp"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ciTxtPrice"
                android:layout_marginEnd="56dp"
                app:layout_constraintVertical_bias="1.0" app:layout_constraintStart_toStartOf="parent"
        />

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ciFavorite"
                style="@style/Image"
                android:background="@drawable/coracionfalse"
                android:layout_width="53dp"
                android:layout_height="49dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.08"
                app:layout_constraintHorizontal_bias="0.884"
                app:layout_constraintStart_toEndOf="@+id/ciTxtItem"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ciTxtItem"
                android:layout_width="166dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/horizontal_margin"
                android:layout_marginEnd="@dimen/horizontal_margin"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ciImgItem"
                app:layout_constraintTop_toTopOf="@id/ciImgItem"
                tools:text="Item 01"
                app:layout_constraintHorizontal_bias="0.0"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ciTxtPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="@id/ciTxtItem"
                app:layout_constraintTop_toBottomOf="@id/ciTxtItem"
                tools:text="123"/>

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ciIconLocation"
                style="@style/Image"
                android:background="@drawable/caminho"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@+id/ciTxtPrice"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="108dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="1.0"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ciLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="Localizacao"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toEndOf="@+id/ciIconLocation"
                android:layout_marginStart="2dp"
                app:layout_constraintTop_toTopOf="@+id/ciIconLocation"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="1.0"/>
        <View
                style="@style/Separator.Horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:id="@+id/view"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>