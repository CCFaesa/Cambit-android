<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.screen.itemdetails.ItemDetailsActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/idImgItem"
        android:layout_width="@dimen/product_size"
        android:layout_height="@dimen/product_size"
        android:layout_marginStart="@dimen/horizontal_margin"
        android:layout_marginTop="@dimen/vertical_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@mipmap/ic_launcher" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/idTxtName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="@id/idImgItem"
        app:layout_constraintTop_toBottomOf="@id/idImgItem"
        tools:text="Celular" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/idTxtPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/vertical_margin"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="@id/idImgItem"
        app:layout_constraintTop_toBottomOf="@id/idTxtName"
        tools:text="1120" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/idTxtAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/vertical_margin"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="@id/idImgItem"
        app:layout_constraintTop_toBottomOf="@id/idTxtPrice"
        tools:text="Vila Velha - Espirito Santo" />

</androidx.constraintlayout.widget.ConstraintLayout>